---
import MobileMenu from './MobileMenu.astro';
import { menuItems } from './menuItems';
---

<header class="flex flex-col p-4 items-center bg-[#c33c3c]">
    <div class="flex justify-between items-center gap-8 w-full lg:w-4/6">
        <MobileMenu />

        <nav class="hidden md:flex items-center">
            {menuItems.map((item) => (
                <a 
                    href={import.meta.env.BASE_URL + item.href} 
                    class="px-8 py-4 text-gray-100 hover:bg-[#9e1f1f] active:bg-[#9e1f1f] transition cursor-pointer"
                >
                    {item.title}
                </a>
            ))}
        </nav>

        <a
            class="
                items-center px-6 py-2
                border-2 border-gray-100 font-semibold text-gray-100
                bg-[#ffffff18] hover:bg-[#ffffff37] active:bg-[#ffffff37]
                transition cursor-pointer
            "
            href={import.meta.env.BASE_URL + '/#data'}
        >
            Explore Data
        </a>
    </div>
</header>
