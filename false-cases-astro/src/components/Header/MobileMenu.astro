---
import menuItems from './menuItems';
---

<!-- Hamburger Icon -->
<div id="open-menu" class="md:hidden p-2 hover:bg-[#9e1f1f] active:bg-[#9e1f1f] transition cursor-pointer">
    <svg class="w-6 h-6" viewBox="0 0 42 28" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" role="img">
        <path d="M0 28V23.3333H42V28H0ZM0 16.3333V11.6667H42V16.3333H0ZM0 4.66667V0H42V4.66667H0Z" fill="#FEF7FF"/>
    </svg>
</div>

<!-- Mobile Menu Overlay -->
<div id="mobile-overlay" class="fixed inset-0 bg-black/60 z-40 hidden md:hidden"></div>

<!-- Mobile Menu -->
<menu
    id="mobile-menu"
    class="
        fixed flex flex-col md:hidden top-0 left-0 z-50 h-full w-4/6 bg-[#c33c3c]
        transform -translate-x-full transition-transform duration-300 ease-in-out
    "
>
    {menuItems.map((item) => (
        <a 
            href={import.meta.env.BASE_URL + item.href} 
            class="w-full px-8 py-4 text-gray-100 hover:bg-[#9e1f1f] active:bg-[#9e1f1f] transition cursor-pointer"
        >
            {item.title}
        </a>
    ))}
</menu>

<script>
    // @ts-nocheck
    function openMenu() {
        document.getElementById('mobile-menu').classList.remove('-translate-x-full');
        document.getElementById('mobile-overlay').classList.remove('hidden');
        document.body.classList.add('overflow-hidden');
    }

    function closeMenu() {
        document.getElementById('mobile-menu').classList.add('-translate-x-full');
        document.getElementById('mobile-overlay').classList.add('hidden');
        document.body.classList.remove('overflow-hidden');
    }

    document.getElementById('open-menu').addEventListener('click', openMenu);
    document.getElementById('mobile-overlay').addEventListener('click', closeMenu);
</script>