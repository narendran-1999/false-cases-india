---
type NavItem = {
    href: string;
    text: string;
};

let navItems: NavItem[] = [
    {
        href: import.meta.env.BASE_URL + "/sources",
        text: 'View Sources',
    },
    {
        href: import.meta.env.BASE_URL + "/methodology",
        text: 'View Methodology',
    },
    {
        href: import.meta.env.BASE_URL + "/faq",
        text: 'View FAQs',
    },
];

interface Props {
    ignoreItemIndex: number;
}

const { ignoreItemIndex } = Astro.props;

navItems = ignoreItemIndex !== undefined
    ? navItems.filter((_, index) => index !== ignoreItemIndex)
    : navItems;
---

<div class="flex flex-col py-16 items-center">
    <div class="flex flex-col gap-4 items-center w-1/2 md:w-1/3 lg:w-1/4">
        {navItems.map((item) => (
            <a
                href={item.href}
                class="p-3 w-full border-2 border-red-600 font-medium text-red-600 text-center hover:bg-red-100 transition"
            >
                {item.text}
            </a>
        ))}

        <a
            href={import.meta.env.BASE_URL}
            class="p-3 w-full border border-red-600 font-medium text-red-600 bg-red-200 text-center hover:bg-red-100 transition">
                Back to Home
        </a>
    </div>
</div>