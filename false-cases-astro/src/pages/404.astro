---
import Layout from '../layouts/Layout.astro';
import { TriangleAlert } from 'lucide-svelte';
---
<Layout>
    <div class="flex flex-col py-16 px-8 items-center h-[60vh]">
        <div class="flex flex-col gap-8 items-center w-full lg:w-4/6">
            <TriangleAlert class="w-16 h-16 text-red-500" />

            <div class="flex flex-col gap-4 items-center">
                <h1 class="text-4xl font-bold text-center">Page Not Found</h1>
                <p class="text-lg text-center">Sorry, the page you are looking for does not exist.</p>
            </div>

            <a
                href={import.meta.env.BASE_URL}
                class="
                    p-3 w-1/2 md:w-1/3 lg:w-1/4
                    border border-red-400
                    font-medium text-red-600 text-center
                    bg-red-200 hover:bg-red-100 transition
                "
            >
                    Back to Home
            </a>
        </div>
    </div>
</Layout>