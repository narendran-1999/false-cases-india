---
import '../styles/global.css'
import SEO from './SEO.astro';

import Header from '../components/Header/Header.astro'
import Footer from '../components/Footer/Footer.astro'

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  noindex?: boolean;
}

const { title, description, canonical, noindex } = Astro.props;

const fullTitle = title
  ? `${title} | False Cases India`
  : 'False Cases India';

const fullDescription = description
  ? description
  : 'Fake reports in crimes against women are common in India.';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- SEO -->
    <SEO
      title={fullTitle}
      description={fullDescription}
      canonical={canonical}
      noindex={noindex}
    />

    <!-- Favicon (SUBPATH SAFE) -->
    <link rel="icon" href={`${import.meta.env.BASE_URL}/favicon.svg`} />

    <!-- Preload critical font -->
    <!--<link
      rel="preload"
      href={`${import.meta.env.BASE_URL}/fonts/inter.woff2`}
      as="font"
      type="font/woff2"
      crossorigin
    />-->
  </head>

  <body class="min-h-screen bg-white text-gray-900 antialiased">
    <!-- Accessibility -->
    <a
      href="#main"
      class="sr-only focus:not-sr-only focus:fixed focus:top-2 focus:left-2 bg-white text-black p-2 z-50"
    >
      Skip to content
    </a>

    <Header />

    <!-- Main content -->
    <main id="main">
      <slot />
    </main>

    <Footer />
  </body>
</html>